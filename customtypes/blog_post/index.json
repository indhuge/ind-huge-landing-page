{
  "id": "blog_post",
  "label": "Blog Post",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date",
          "placeholder": ""
        }
      },
      "autor": {
        "type": "Text",
        "config": {
          "label": "Autor",
          "placeholder": ""
        }
      },
      "time_of_reading": {
        "type": "Number",
        "config": {
          "label": "Time of reading (m)",
          "placeholder": ""
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "category",
          "select": "document",
          "customtypes": ["category"]
        }
      },
      "description": {
        "type": "Text",
        "config": {
          "label": "Description",
          "placeholder": ""
        }
      },
      "carouselbutton": {
        "type": "Text",
        "config": {
          "label": "CarouselButton",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "newsletter": {
              "type": "SharedSlice"
            },
            "blog_image_slice": {
              "type": "SharedSlice"
            },
            "blog_paragraph_slice": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_url": {
        "type": "Text",
        "config": {
          "label": "Meta Url",
          "placeholder": ""
        }
      }
    }
  }
}
